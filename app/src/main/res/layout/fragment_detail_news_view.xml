<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.DetailNewsViewFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/detail_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="10dp"
        android:padding="5dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <ImageView
                    android:id="@+id/detail_image"
                    android:layout_width="390dp"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:elevation="20dp"
                    tools:src="@tools:sample/backgrounds/scenic" />
            </androidx.cardview.widget.CardView>

            <!--app:imageUrl="@{article.urlToImage}"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="7dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:hint="@string/title_name"
                    android:padding="6dp"
                    android:maxLines="3"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:paddingHorizontal="6dp"
                    android:hint="@string/description_short_details"
                    android:textSize="13sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        app:cardCornerRadius="10dp">
                        <TextView
                            android:id="@+id/detail_source"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:hint="@string/source_name"
                            android:paddingTop="3dp"
                            android:maxLines="2"
                            android:padding="2dp"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:textStyle="italic"/>
                    </androidx.cardview.widget.CardView>

                    <ImageButton
                        android:id="@+id/detail_bookmarks"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:src="@drawable/ic_bookmark_remove"
                        android:contentDescription="detail image"
                        android:backgroundTint="#9031A0F9" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_card_view_online"
                        android:layout_width="150dp"
                        android:layout_height="65dp"
                        app:cardCornerRadius="10dp"
                        android:clickable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="VIEW ONLINE"
                            android:textColor="#03A9F4"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>